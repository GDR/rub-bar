    javascript:
      var State = {
        zeroScale: true
      };

      $.ajax({
        url: "/chart/rub_bar.json",
        context: document.body
      }).done(function(ajax_data) {
        var chart_data = chart_from_ajax(ajax_data, 30);
        var chart = respChart("#oil_chart", chart_data, {scaleBeginAtZero: State.zeroScale});

        $('.js-zero-scale').click(function(){
          State.zeroScale = !State.zeroScale;
          chart = respChart("#oil_chart", chart_data, {scaleBeginAtZero: State.zeroScale});
          chart(chart_data);
          if(State.zeroScale) {
            $(this).removeClass('btn-primary');
          } else {
            $(this).addClass('btn-primary');
          }
        });

        $('.period-btn.period-month').click(function(){
          $('.period-btn').removeClass('btn-primary');
          $(this).addClass('btn-primary');
          chart_data = chart_from_ajax(ajax_data, 30);
          chart(chart_data);
        });

        $('.period-btn.period-months-3').click(function () {
          $('.period-btn').removeClass('btn-primary');
          $(this).addClass('btn-primary');
          chart_data = chart_from_ajax(ajax_data, 90);
          chart(chart_data);
        });

        $('.period-btn.period-months-6').click(function () {
          $('.period-btn').removeClass('btn-primary');
          $(this).addClass('btn-primary');
          chart_data = chart_from_ajax(ajax_data, 182);
          chart(chart_data);
        });

        $('.period-btn.period-year').click(function () {
          $('.period-btn').removeClass('btn-primary');
          $(this).addClass('btn-primary');
          chart_data = chart_from_ajax(ajax_data, 365);
          chart(chart_data);
        });

        $('.period-btn.period-years-3').click(function () {
          $('.period-btn').removeClass('btn-primary');
          $(this).addClass('btn-primary');
          chart_data_ = chart_from_ajax(ajax_data, 365*3);
          chart(chart_data);
        });

        $('.period-btn.period-years-6').click(function () {
          $('.period-btn').removeClass('btn-primary');
          $(this).addClass('btn-primary');
          chart_data = chart_from_ajax(ajax_data, 365 * 6);
          chart(chart_data);
        });

        $('.period-btn.period-all').click(function () {
          $('.period-btn').removeClass('btn-primary');
          $(this).addClass('btn-primary');
          chart_data = chart_from_ajax(ajax_data, 999999);
          chart(chart_data);
        });

        $('.js-zero-scale').click(function () {
          chart();
        });
      });

